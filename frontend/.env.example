# Frontend Environment Configuration

# ==========================================
# API Configuration
# ==========================================

# Backend API URL
REACT_APP_API_URL=http://localhost:3000/api/v1

# WebSocket URL (if real-time features are implemented)
# REACT_APP_WS_URL=ws://localhost:3000

# ==========================================
# Sui Network Configuration
# ==========================================

# Network: devnet, testnet, or mainnet
REACT_APP_SUI_NETWORK=testnet

# Package ID (deployed smart contract)
# Get this after deploying contracts
REACT_APP_SUI_PACKAGE_ID=your_package_id_here

# ==========================================
# Feature Flags
# ==========================================

# Enable analytics
# REACT_APP_ENABLE_ANALYTICS=true

# Enable debug mode
# REACT_APP_DEBUG=false

# Enable mock data for development
# REACT_APP_USE_MOCK_DATA=false

# ==========================================
# UI Configuration
# ==========================================

# Refresh interval for proposals (milliseconds)
REACT_APP_REFRESH_INTERVAL=30000

# Max transactions per proposal
REACT_APP_MAX_TRANSACTIONS=50

# ==========================================
# External Services (Optional)
# ==========================================

# Google Analytics tracking ID
# REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry DSN for error tracking
# REACT_APP_SENTRY_DSN=https://your-sentry-dsn

# ==========================================
# Wallet Configuration
# ==========================================

# Supported wallets (comma-separated)
# Options: SuiWallet, Ethos, MartianWallet, Suiet
REACT_APP_SUPPORTED_WALLETS=SuiWallet,Ethos

# ==========================================
# Development
# ==========================================

# Skip preflight check (for development only)
SKIP_PREFLIGHT_CHECK=true

# Browser to open (none, chrome, firefox, edge)
# BROWSER=chrome

# Port for development server
# PORT=3001
